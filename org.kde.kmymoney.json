{
    "id": "org.kde.kmymoney",
    "default-branch": "stable",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "command": "kmymoney",
    "rename-icon": "kmymoney",
    "copy-icon": true,
    "cleanup": [
        "*.a",
        "*.la",
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/mkspecs",
        "/share/aclocal",
        "/share/doc",
        "/share/info",
        "/share/man"
    ],
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--device=dri",
        "--system-talk-name=org.freedesktop.UDisks2"
    ],
    "modules": [
        {
            "name": "qgpgme",
            "buildsystem": "autotools",
            "config-opts": [
                "--enable-languages=cpp,qt6",
                "--disable-glibtest",
                "--disable-gpgconf-test",
                "--disable-gpg-test",
                "--disable-gpgsm-test",
                "--disable-g13-test"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gnupg.org/ftp/gcrypt/gpgme/gpgme-1.24.3.tar.bz2",
                    "sha256": "bfc17f5bd1b178c8649fdd918956d277080f33df006a2dc40acdecdce68c50dd",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1239,
                        "stable-only": true,
                        "url-template": "https://gnupg.org/ftp/gcrypt/gpgme/gpgme-$version.tar.bz2",
                        "versions": {
                            "<": "2.0.0"
                        }
                    }
                }
            ],
            "cleanup": [
                "/bin"
            ]
        },
        {
            "name": "qtkeychain",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_WITH_QT6=ON",
                "-DBUILD_TESTING=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/frankosterfeld/qtkeychain/archive/refs/tags/0.15.0.tar.gz",
                    "sha256": "f4254dc8f0933b06d90672d683eab08ef770acd8336e44dfa030ce041dc2ca22",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 4138,
                        "stable-only": true,
                        "url-template": "https://github.com/frankosterfeld/qtkeychain/archive/refs/tags/$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "alkimia",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DQT_MAJOR_VERSION=6",
                "-DBUILD_APPLETS=OFF",
                "-DBUILD_TESTING=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/alkimia/8.2.1/alkimia-8.2.1.tar.xz",
                    "sha256": "f921410e180e0a5811e1ee2926954920c6576a72b3b65f53791faa6c85fcb689",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 378759,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/alkimia/$version/alkimia-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "libofx",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/libofx/libofx/releases/download/0.10.9/libofx-0.10.9.tar.gz",
                    "sha256": "1ca89ff7d681c9edad312172ac464231a8de686e653213612f9417492cef0d37",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 7309,
                        "stable-only": true,
                        "url-template": "https://github.com/libofx/libofx/releases/download/0.10.9/libofx-$version.tar.gz"
                    }
                }
            ],
            "cleanup": [
                "/bin"
            ],
            "modules": [
                {
                    "name": "OpenSP",
                    "buildsystem": "autotools",
                    "rm-configure": true,
                    "config-opts": [
                        "--disable-static",
                        "--disable-doc-build"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://sourceforge.net/projects/openjade/files/opensp/1.5.2/OpenSP-1.5.2.tar.gz",
                            "sha256": "57f4898498a368918b0d49c826aa434bb5b703d2c3b169beb348016ab25617ce",
                            "x-checker-data": {
                                "type": "anitya",
                                "project-id": 377818,
                                "stable-only": true,
                                "url-template": "https://sourceforge.net/projects/openjade/files/opensp/$version/OpenSP-$version.tar.gz"
                            }
                        },
                        {
                            "type": "shell",
                            "commands": [
                                "cp /usr/share/gnu-config/config.sub .",
                                "cp /usr/share/gnu-config/config.guess ."
                            ]
                        },
                        {
                            "type": "script",
                            "dest-filename": "autogen.sh",
                            "commands": [
                                "autoreconf -vfi"
                            ]
                        }
                    ],
                    "cleanup": [
                        "/bin"
                    ]
                },
                {
                    "name": "libxml++-2.6",
                    "buildsystem": "meson",
                    "config-opts": [
                        "-Dbuild-examples=false",
                        "-Dbuild-tests=false"
                    ],
                    "cleanup": [
                        "/bin",
                        "/lib/libxml++-2.6"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://download.gnome.org/sources/libxml++/2.42/libxml++-2.42.3.tar.xz",
                            "sha256": "74b95302e24dbebc56e97048e86ad0a4121fc82a43e58d381fbe1d380e8eba04",
                            "x-checker-data": {
                                "type": "gnome",
                                "name": "libxml++",
                                "//": "libxml++ 3+ is not API compatible",
                                "versions": {
                                    "<": "2.91.0"
                                },
                                "stable-only": true
                            }
                        }
                    ],
                    "modules": [
                        {
                            "name": "mm-common",
                            "sources": [
                                {
                                    "type": "archive",
                                    "url": "https://download.gnome.org/sources/mm-common/1.0/mm-common-1.0.7.tar.xz",
                                    "sha256": "494abfce781418259b1e9d8888c73af4de4b6f3be36cc75d9baa8baa0f2a7a39",
                                    "x-checker-data": {
                                        "type": "gnome",
                                        "name": "mm-common",
                                        "stable-only": true
                                    }
                                }
                            ]
                        },
                        {
                            "name": "glibmm",
                            "buildsystem": "meson",
                            "config-opts": [
                                "-Dbuild-examples=false"
                            ],
                            "sources": [
                                {
                                    "sha256": "64f11d3b95a24e2a8d4166ecff518730f79ecc27222ef41faf7c7e0340fc9329",
                                    "type": "archive",
                                    "url": "https://download.gnome.org/sources/glibmm/2.66/glibmm-2.66.8.tar.xz",
                                    "x-checker-data": {
                                        "type": "gnome",
                                        "name": "glibmm",
                                        "versions": {
                                            "<": "2.67"
                                        }
                                    }
                                }
                            ],
                            "cleanup": [
                                "/lib/glibmm-2.4",
                                "/lib/giomm-2.4",
                                "/lib/libglibmm_generate_extra_defs*"
                            ],
                            "modules": [
                                {
                                    "name": "sigc++",
                                    "buildsystem": "meson",
                                    "config-opts": [
                                        "-Dbuild-tests=false",
                                        "-Dbuild-examples=false"
                                    ],
                                    "sources": [
                                        {
                                            "type": "archive",
                                            "url": "https://download.gnome.org/sources/libsigc++/2.12/libsigc++-2.12.1.tar.xz",
                                            "sha256": "a9dbee323351d109b7aee074a9cb89ca3e7bcf8ad8edef1851f4cf359bd50843",
                                            "x-checker-data": {
                                                "type": "gnome",
                                                "name": "libsigc++",
                                                "versions": {
                                                    "<": "2.99"
                                                }
                                            }
                                        }
                                    ],
                                    "cleanup": [
                                        "/lib/sigc++-2.0"
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "name": "kchart",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kdiagram/3.0.1/kdiagram-3.0.1.tar.xz",
                    "sha256": "4659b0c2cd9db18143f5abd9c806091c3aab6abc1a956bbf82815ab3d3189c6d",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 17734,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/kdiagram/$version/kdiagram-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "aqbanking",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/aqbanking/aqbanking/archive/refs/tags/6.6.4.tar.gz",
                    "sha256": "db32f8525087ac103f2ef0837a7d83e0720c133a57d8bf6b2d72b07a1f98a026",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 6890,
                        "stable-only": true,
                        "url-template": "https://github.com/aqbanking/aqbanking/archive/refs/tags/$version.tar.gz"
                    }
                },
                {
                    "type": "shell",
                    "commands": [
                        "make -fMakefile.cvs",
                        "./configure",
                        "make typedefs",
                        "make typefiles"
                    ]
                }
            ],
            "modules": [
                {
                    "name": "xmlsec",
                    "config-opts": [
                        "--disable-static"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://www.aleksey.com/xmlsec/download/xmlsec1-1.3.7.tar.gz",
                            "sha256": "d82e93b69b8aa205a616b62917a269322bf63a3eaafb3775014e61752b2013ea",
                            "x-checker-data": {
                                "type": "anitya",
                                "project-id": 5200,
                                "stable-only": true,
                                "url-template": "https://www.aleksey.com/xmlsec/download/xmlsec1-$version.tar.gz"
                            }
                        }
                    ],
                    "cleanup": [
                        "/bin"
                    ]
                },
                {
                    "name": "gwenhywfar",
                    "config-opts": [
                        "--with-guis=qt6"
                    ],
                    "build-options": {
                        "env": {
                            "GPGRT_CONFIG": "/app/bin/gpgrt-config"
                        }
                    },
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/aqbanking/gwenhywfar/archive/refs/tags/5.13.0.tar.gz",
                            "sha256": "2c3564e7a327c483a69a85b9d563f0408fb32c21765a9c992a04a892ac05dab5",
                            "x-checker-data": {
                                "type": "anitya",
                                "project-id": 6891,
                                "stable-only": true,
                                "url-template": "https://github.com/aqbanking/gwenhywfar/archive/refs/tags/$version.tar.gz"
                            }
                        },
                        {
                            "type": "shell",
                            "commands": [
                                "make -fMakefile.cvs"
                            ]
                        }
                    ],
                    "cleanup": [
                        "/bin"
                    ],
                    "modules": [
                        {
                            "name": "libgcrypt",
                            "config-opts": [
                                "--disable-static"
                            ],
                            "sources": [
                                {
                                    "type": "archive",
                                    "url": "https://gnupg.org/ftp/gcrypt/libgcrypt/libgcrypt-1.11.2.tar.bz2",
                                    "sha256": "6ba59dd192270e8c1d22ddb41a07d95dcdbc1f0fb02d03c4b54b235814330aac",
                                    "x-checker-data": {
                                        "type": "anitya",
                                        "project-id": 1623,
                                        "stable-only": true,
                                        "url-template": "https://gnupg.org/ftp/gcrypt/libgcrypt/libgcrypt-$version.tar.bz2"
                                    }
                                }
                            ],
                            "cleanup": [
                                "/bin"
                            ],
                            "modules": [
                                {
                                    "name": "libgpg-error",
                                    "config-opts": [
                                        "--disable-static"
                                    ],
                                    "sources": [
                                        {
                                            "type": "archive",
                                            "url": "https://gnupg.org/ftp/gcrypt/libgpg-error/libgpg-error-1.55.tar.bz2",
                                            "sha256": "95b178148863f07d45df0cea67e880a79b9ef71f5d230baddc0071128516ef78",
                                            "x-checker-data": {
                                                "type": "anitya",
                                                "project-id": 1628,
                                                "stable-only": true,
                                                "url-template": "https://gnupg.org/ftp/gcrypt/libgpg-error/libgpg-error-$version.tar.bz2"
                                            }
                                        }
                                    ],
                                    "cleanup": [
                                        "/bin",
                                        "/share/common-lisp",
                                        "/share/libgpg-error"
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "name": "sqlcipher",
            "cleanup": [
                "/bin"
            ],
            "config-opts": [
                "--disable-static",
                "--enable-tempstore=yes",
                "--disable-tcl"
            ],
            "build-options": {
                "cflags": "-DSQLITE_HAS_CODEC",
                "ldflags": "-lcrypto"
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/sqlcipher/sqlcipher/archive/refs/tags/v4.6.1.tar.gz",
                    "sha256": "d8f9afcbc2f4b55e316ca4ada4425daf3d0b4aab25f45e11a802ae422b9f53a3",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 11213,
                        "stable-only": true,
                        "url-template": "https://github.com/sqlcipher/sqlcipher/archive/refs/tags/v$version.tar.gz",
                        "versions": {
                            "<": "4.7"
                        }
                    }
                }
            ]
        },
        {
            "name": "kmymoney",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_WITH_QT6=ON"
            ],
            "cleanup": [
                "/share/icons/hicolor/1024x1024"
            ],
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kmymoney/5.2.1/kmymoney-5.2.1.tar.xz",
                    "sha256": "feadf40b6d4c90d77e32716a858dd23769081863104d8cea62910b1ec3e4336b",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8917,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/kmymoney/$version/kmymoney-$version.tar.xz"
                    }
                },
                {
                    "type": "patch",
                    "path": "releases.patch"
                }
            ]
        }
    ]
}
